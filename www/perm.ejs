<!-- Wappler include is="dmx-app" id="perm" appconnect="local" framework7_6="With App Connect" framework7_icons="local" head-page="index.html" cordova="local" components="{dmxBrowser:{},dmxRouting:{},dmxNotifications:{}}" -->
<div is="dmx-browser" id="browser1"></div>
<meta name="ac:route" content="/perm">
<div id="login1" data-name="login1" class="page no-navbar no-toolbar no-swipeback login-screen-page">
    <div class="page-content login-screen-content">
        <div is="dmx-f7-messages" id="f7-messages1"></div>
        <div is="dmx-f7-notification" id="faildnotify" text="Login Faild!" icon="<i class=&quot;icon f7-icons text-color-red&quot;>exclamationmark_circle_fill</i>" title="Error" close-on-click="true"></div>
        <div is="dmx-f7-notification" id="successnotify" text="Logging in .." icon="<i class=&quot;icon f7-icons text-color-green&quot;>checkmark_circle_fill</i>" title="Success" close-on-click="true">

        </div>
        <div class="login-screen-title">My App</div>
        <form is="dmx-serverconnect-form" id="serverconnectform1" action="https://db.fayziyya.com/dmxConnect/api/LogIn.php" site="Fayziyya DB" credentials dmx-on:unauthorized="faildnotify.open()" dmx-on:success="successnotify.open();browser1.goto('/',true)" method="post">
            <div class="list">
                <ul>
                    <li class="item-content item-input">
                        <div class="item-inner">
                            <div class="item-title item-label">Username</div>
                            <div class="item-input">
                                <input type="text" name="user" placeholder="Username" id="user">
                            </div>
                        </div>
                    </li>
                    <li class="item-content item-input">
                        <div class="item-inner">
                            <div class="item-title item-label">Password</div>
                            <div class="item-input">
                                <input type="password" name="pass" placeholder="Password" id="pass">
                            </div>
                        </div>
                    </li>
                    <li>
                    </li>
                </ul>
            </div>
            <div class="list">
                <ul>
                    <li class="bg-color-lightblue text-color-white"><a href="" class="item-link list-button text-color-white bg-color-blue" dmx-on:click="serverconnectform1.submit()">Sign In</a></li>
                    <li>
                        <a href="" class="item-link">
                            <div class="item-content">
                                <div class="item-media">
                                    <i class="icon f7-icons text-color-green">checkmark_circle_fill</i>
                                </div>
                                <div class="item-inner">
                                    <div class="item-title" dmx-on:click="browser1.goto('/',true)">Home</div>
                                </div>
                            </div>
                        </a>
                    </li>
                </ul>
                <div class="block-footer">
                    <p>Some text about login information.</p>
                    <p><a href="#" class="link back">Close Login Screen</a></p>
                </div>
            </div>
        </form>
    </div>
</div>